@model StARKS.Entities.Course

<div id="courseModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-controller="Course" id="courseForm" asp-action="Save">
                <div class="modal-header">
                    <h4 id="ModalCourseTitle" class="modal-title"></h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="modal-body">
                    <input asp-for="CourseId" type="hidden" class="form-control">
                    <div class="form-group">
                        <label>Code</label>
                        <input asp-for="Code" type="text" placeholder="Code" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>Name</label>
                        <input asp-for="Name" type="text" placeholder="Name" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>Description</label>
                        <textarea asp-for="Description" placeholder="Description" class="form-control"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="btn-group">
                        <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
                        <input type="button" id="deleteCourseButton" onclick="ConfirmationCourseDelete()" class="btn btn-danger" value="Delete">
                        <input type="submit" class="btn btn-success" value="Save">
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="~/js/course.js"></script>

