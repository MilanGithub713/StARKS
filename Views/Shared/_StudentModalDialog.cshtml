@model StARKS.Entities.Student
<!-- Edit Modal HTML -->
<div id="id01" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-controller="Student" id="form" asp-action="Save">
                <div class="modal-header">
                    <h4 id="ModalTitle" class="modal-title"></h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="modal-body">
                    <input asp-for="StudentId" type="hidden" class="form-control">
                    <div class="form-group">
                        <label>First Name</label>
                        <input asp-for="FirstName" type="text" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>Last Name</label>
                        <input asp-for="LastName" type="text" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>Address</label>
                        <textarea asp-for="Address"class="form-control"></textarea>
                    </div>
                    <div class="form-group">
                        <label>City</label>
                        <input asp-for="City" type="text" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>State</label>
                        <input asp-for="State" type="text" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>Date of Birhday</label>
                        <input asp-for="DateOfBirth" type="date" class="form-control">
                    </div>
                    <div class="form-group">
                        <select asp-for="Gender" class="form-control" 
                                asp-items="@(new SelectList(Enum.GetValues(typeof(Gender)),"Select Gender"))">
                            <option value="">Select Gender</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="btn-group">
                        <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
                        <input type="button" id="deleteStudentButton" onclick="ConfirmationStudentDelete()" class="btn btn-danger" value="Delete">
                        <input type="submit" class="btn btn-success" value="Save">
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

